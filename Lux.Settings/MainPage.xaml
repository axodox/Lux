<Page
  x:Class="Lux.Settings.MainPage"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:local="using:Lux.Settings"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:media="using:Windows.UI.Xaml.Media"
  mc:Ignorable="d">
  <Page.Resources>
    <media:AcrylicBrush x:Key="WindowBrush" BackgroundSource="HostBackdrop"
                        TintOpacity="0.8" TintColor="#FF000000" FallbackColor="#FF008000" />
    <Style x:Key="TileStyle" TargetType="Border" BasedOn="{StaticResource ButtonRevealStyle}">
      <Setter Property="Margin" Value="24"/>
      <Setter Property="Width" Value="196"/>
      <Setter Property="Height" Value="256"/>
      <Setter Property="CornerRadius" Value="6"/>
      <Setter Property="BorderThickness" Value="2"/>
    </Style>           
  </Page.Resources>
  <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
        Background="{StaticResource WindowBrush}">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
      <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>

    <Grid Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">
      <Button x:Name="myButton" 
              Style="{StaticResource TileStyle}"
              Click="ClickHandler">Click Me</Button>
    </Grid>
  </Grid>
</Page>
