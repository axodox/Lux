<Page
  x:Class="Lux.MainPage"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:local="using:Lux"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  mc:Ignorable="d"
  local:StateHelper.State="{x:Bind ConnectionState, Mode=OneWay}">
  <Grid Background="{StaticResource SystemControlAcrylicWindowBrush}">
    <VisualStateManager.VisualStateGroups>
      <VisualStateGroup>
        <VisualState x:Name="Disconnected">
          <Storyboard>
            <ColorAnimation Storyboard.TargetProperty="(Button.Foreground).(SolidColorBrush.Color)" Storyboard.TargetName="DeviceButton" To="Red" Duration="0:0:1" />
          </Storyboard>
        </VisualState>
        <VisualState x:Name="Connected">
          <Storyboard>
            <ColorAnimation Storyboard.TargetProperty="(Button.Foreground).(SolidColorBrush.Color)" Storyboard.TargetName="DeviceButton" To="Green" Duration="0:0:1" />
          </Storyboard>
        </VisualState>
        <VisualState x:Name="Pending">
          <Storyboard>
            <ColorAnimation Storyboard.TargetProperty="(Button.Foreground).(SolidColorBrush.Color)" Storyboard.TargetName="DeviceButton" To="Yellow" Duration="0:0:1" />
          </Storyboard>
        </VisualState>
        <VisualState x:Name="Idle">
          <Storyboard>
            <ColorAnimation Storyboard.TargetProperty="(Button.Foreground).(SolidColorBrush.Color)" Storyboard.TargetName="DeviceButton" To="Gray" Duration="0:0:1" />
          </Storyboard>
        </VisualState>
      </VisualStateGroup>
    </VisualStateManager.VisualStateGroups>

    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
      <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>

    <!-- Source selection -->
    <ScrollViewer Grid.Row="1" HorizontalAlignment="Center" MinHeight="280"  
                  HorizontalScrollBarVisibility="Auto"  
                  VerticalScrollBarVisibility="Hidden">
      <StackPanel Orientation="Horizontal">
        <StackPanel.Resources>
          <Style TargetType="RadioButton" BasedOn="{StaticResource TileRadioButtonStyle}">
            <Setter Property="Width" Value="196"/>
            <Setter Property="Height" Value="256"/>
            <Setter Property="Margin" Value="12"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="VerticalContentAlignment" Value="Stretch"/>
          </Style>
          <Style TargetType="TextBlock">
            <Setter Property="TextAlignment" Value="Center"/>
          </Style>

          <Style x:Key="SettingStackPanel" TargetType="StackPanel">
            <Setter Property="Margin" Value="0,12"/>
            <Setter Property="Orientation" Value="Vertical"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
          </Style>

          <Style TargetType="Slider">
            <Setter Property="Width" Value="128"/>
          </Style>
        </StackPanel.Resources>

        <!-- Off -->
        <RadioButton x:Name="SourceOffButton" Checked="OnSourceChecked" IsChecked="{x:Bind IsSourceOff, Mode=OneWay}">
          <StackPanel VerticalAlignment="Center">
            <Image Source="Images/SourceOff.png"/>
            <TextBlock>Off</TextBlock>
          </StackPanel>
        </RadioButton>

        <!-- Static -->
        <RadioButton x:Name="SourceStaticButton" Checked="OnSourceChecked" IsChecked="{x:Bind IsSourceStatic, Mode=OneWay}">
          <local:FlipControl>
            <local:FlipControl.PrimaryContent>
              <StackPanel>
                <Image Source="Images/SourceSimple.png"/>
                <TextBlock>Static</TextBlock>
              </StackPanel>
            </local:FlipControl.PrimaryContent>
            <local:FlipControl.SecondaryContent>
              <StackPanel>
                <StackPanel Style="{StaticResource SettingStackPanel}">
                  <Slider/>
                  <TextBlock Text="Hue"/>
                </StackPanel>

                <StackPanel Style="{StaticResource SettingStackPanel}">
                  <Slider/>
                  <TextBlock Text="Saturation"/>
                </StackPanel>
              </StackPanel>
            </local:FlipControl.SecondaryContent>
          </local:FlipControl>
        </RadioButton>

        <!-- Rainbow -->
        <RadioButton x:Name="SourceRainbowButton" Checked="OnSourceChecked" IsChecked="{x:Bind IsSourceRainbow, Mode=OneWay}">
          <local:FlipControl>
            <local:FlipControl.PrimaryContent>
              <StackPanel>
                <Image Source="Images/SourceRainbow.png"/>
                <TextBlock>Rainbow</TextBlock>
              </StackPanel>
            </local:FlipControl.PrimaryContent>
            <local:FlipControl.SecondaryContent>
              <StackPanel>
                <StackPanel Style="{StaticResource SettingStackPanel}">
                  <Slider/>
                  <TextBlock Text="Frequency"/>
                </StackPanel>

                <StackPanel Style="{StaticResource SettingStackPanel}">
                  <Slider/>
                  <TextBlock Text="Speed"/>
                </StackPanel>
              </StackPanel>
            </local:FlipControl.SecondaryContent>
          </local:FlipControl>
        </RadioButton>

        <!-- Context Aware -->
        <RadioButton x:Name="SourceContextAwareButton" Checked="OnSourceChecked" IsChecked="{x:Bind IsSourceContextAware, Mode=OneWay}">
          <local:FlipControl>
            <local:FlipControl.PrimaryContent>
              <StackPanel>
                <Image Source="Images/SourceContext.png"/>
                <TextBlock>Context Aware</TextBlock>
              </StackPanel>
            </local:FlipControl.PrimaryContent>
            <local:FlipControl.SecondaryContent>
              <StackPanel>
                <StackPanel Style="{StaticResource SettingStackPanel}">
                  <Slider/>
                  <TextBlock Text="Sample Size"/>
                </StackPanel>

                <StackPanel Style="{StaticResource SettingStackPanel}">
                  <Slider/>
                  <TextBlock Text="Temporal Averaging"/>
                </StackPanel>
              </StackPanel>
            </local:FlipControl.SecondaryContent>
          </local:FlipControl>
        </RadioButton>
      </StackPanel>
    </ScrollViewer>

    <!-- Device setting -->
    <Button x:Name="DeviceButton" 
            Grid.Row="2" Margin="16,0,0,16" VerticalAlignment="Bottom" Height="48"
            CornerRadius="6" Padding="9" Foreground="Gray"
            Style="{StaticResource ButtonRevealStyle}" Background="Transparent"
            Click="{x:Bind ConfigureDevice}"
            IsHitTestVisible="{x:Bind IsConnected, Mode=OneWay}">
      <StackPanel Orientation="Horizontal">
        <FontIcon FontFamily="Segoe MDL2 Assets"
                  Glyph="&#xE88E;" FontSize="24" VerticalAlignment="Center"/>
        <TextBlock Margin="6,0" VerticalAlignment="Center" Text="{x:Bind ConnectionState, Mode=OneWay}"/>
      </StackPanel>
    </Button>

    <!-- Brightness setting -->
    <StackPanel Grid.Row="2" Margin="0,0,16,16" CornerRadius="6" Padding="12,9" VerticalAlignment="Bottom" HorizontalAlignment="Right" BorderBrush="{ThemeResource SystemControlTransparentRevealBorderBrush}" BorderThickness="{ThemeResource ToggleButtonBorderThemeThickness}" Orientation="Horizontal" Height="48">
      <FontIcon FontFamily="Segoe MDL2 Assets"
                Glyph="&#xEC8A;" VerticalAlignment="Center" FontSize="24"/>
      <Slider Width="100" Margin="9,-3" VerticalAlignment="Center"/>
      <FontIcon FontFamily="Segoe MDL2 Assets"
                Glyph="&#xE706;" VerticalAlignment="Center" FontSize="24"/>
    </StackPanel>

    <!-- Title bar -->
    <Grid Grid.Row="0" x:Name="AppTitleBar" VerticalAlignment="Top" HorizontalAlignment="Stretch" Background="Transparent">
      <Grid.ColumnDefinitions>
        <ColumnDefinition x:Name="TitleBarLeftPaddingColumn" Width="0"/>
        <ColumnDefinition/>
        <ColumnDefinition x:Name="TitleBarRightPaddingColumn" Width="0"/>
      </Grid.ColumnDefinitions>

      <StackPanel Grid.Column="1" Orientation="Horizontal">
        <Image Source="Assets/Square44x44Logo.scale-200.png"
                 VerticalAlignment="Center"
                 Margin="6,0"/>
        <TextBlock Text="Lux"
                   Style="{StaticResource CaptionTextBlockStyle}" 
                   VerticalAlignment="Center"
                   Margin="6,0"/>
      </StackPanel>
    </Grid>
  </Grid>
</Page>